---
import '../../styles/pages/photographers.scss';
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PhotographerCard from '../../components/PhotographerCard.tsx';

const photographers = await getCollection('photographers');
---

<Layout title="Photographers">
  <h1 class="page-title">Members</h1>
  <div class="photographers-grid content">
    {photographers.map(photographer => (
      <PhotographerCard photographer={{
        name: photographer.data.name,
        uniqueId: photographer.data.uniqueId,
        image: photographer.data.image,
        location: photographer.data?.location || ""
      }} client:load />
    ))}
  </div>
</Layout>
